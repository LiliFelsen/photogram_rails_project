<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= form_for @user, html: { multipart: true } do |f| %>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4>Change your profile image:</h4>
                <div class="img-circle">
                  <% if @user.avatar.exists? %>
                     <%= image_tag @user.avatar.url(:medium), id: 'image-preview', class: 'img-responsive img-circle profile-image' %>
                  <% else %>
                    <%=  image_tag 'default-avatar.png', id: 'image-preview', class: 'img-responsive img-circle profile-image' %>
                  <% end %>
                </div>
                <center><%= f.file_field :avatar, onChange: 'loadFile(event)' %></center>
              </div>
            </div>
          </div>
          <br><br>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4>Update your username:</h4>
                  <%= f.text_field :username %>
              </div>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.submit "Update Profile", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
