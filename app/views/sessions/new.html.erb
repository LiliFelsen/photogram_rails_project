
<div class="login-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Log in</h2>
          </div>
          <%= form_tag sessions_path %>
            <div class="panel-body">
              <%= text_field_tag :username, nil, placeholder: 'Username', input_html: { class: 'input-lg' } %><br><br>
              <%= password_field_tag :password, nil, placeholder: 'Password', input_html: { class: 'input-lg' } %><br><br>
              <%= submit_tag "Log in", class: 'btn-lg btn-info btn-block' %>
            </div>
        </div>
      </div>
    </div>
  </div>
