<h1><%= @picture.title %></h1>
<div class="user-name">
  <%= link_to @picture.user.username, user_path(@picture.user) %>
</div>


<% if @picture.user_id == current_user.id %>
<%= link_to "Edit picture", edit_picture_path(@picture) %><br>
<%= link_to "Delete picture", picture_path(@picture), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %> <br><br>
<% end %>

<%= image_tag @picture.image.url(:medium)%><br>

<br><br>

<% if !@picture.tags.empty? %>
  <%= "Picture tag(s):" %>
  <% @picture.tags.each do |tag| %>
    <li><%= link_to tag.name, tag_path(tag) %></li>
  <% end %>
<% end %>

<br>

<% if !@picture.comments.empty?  %>
  <%= "Picture comment(s):" %>
  <% @picture.comments.each do |com| %>
    <li>
      "<%= com.content %>" by
      <% if com.user == current_user  %>
        <%= "You" %>
        <%= link_to "Delete Comment", comment_path(com), method: :delete %>
      <% else %>
        <%= com.user.username %>
      <% end %>
    </li>
  <% end %>
<% end %>

<br>

Add a new comment:<br>
<%= form_for @comment do |f| %>
<%= f.text_area :content %><br>
<%= f.hidden_field :picture_id, :value => @picture.id %>
<%= f.submit %>
<% end  %>
